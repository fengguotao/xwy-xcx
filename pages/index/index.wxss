/**index.wxss**/
image {
	width : 100%
}
swiper{
	height : 13rem;
}
.box{
    position: relative;
    width: 100%;
    height: 9.1rem;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;
}
.item {
    height: .266rem;
    width: 100%;
}
.Mask {
    width: 100%;
    height: 100%;
    background: url(http://wx.china.cn/scene/content/images/mask.5d3d6b8.png) no-repeat;
}
.news-eye {
    overflow: hidden;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0 .693rem .53rem;
}
.news-eye .title {
    color: #fff;
    font-size: .96rem;
    font-weight: 700;
    line-height: 1.17326rem;
    margin: .373rem 0;
}
.news-eye .bottom {
    left: 0;
    width: 100%;
    height: .907rem;
}
.tagUrl {
    float: left;
    height: 100%;
    width : 10%
}
.bottom span {
    float: left;
    margin-left: .213rem;
    display: inline-block;
    line-height: 1rem;
    color: #fff;
    font-size: .586rem;
}
.hits {
    float: left;
    background-color: rgba(0,0,0,.24);
    margin-left: .37rem;
    height: .907rem;
    line-height: .907rem;
    border: .03rem solid hsla(0,0%,100%,.5);
    box-sizing: border-box;
    color: #fff;
}
.hits image {
    float: left;
    box-sizing: border-box;
    height: 100%;
    vertical-align: middle;
    padding: .2rem .21rem;
    width:1.5rem;
}
.hits .hits-people {
    float: right;
    height: 100%;
    line-height: .86rem;
    display: block;
    margin: auto;
    font-size: .586rem;
    padding-right: .21rem;
}
.play-icon {
    float: left;
    margin-left: .373rem;
    width: .693rem;
    height: .693rem;
    margin-top: .107rem;
}